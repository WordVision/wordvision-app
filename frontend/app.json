{
  "expo": {
    "owner": "wordvision",
    "name": "WordVision",
    "slug": "WordVision",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "wordvision",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/icons/splash-icon.png",
      "imageWidth": 200,
      "resizeMode": "contain",
      "backgroundColor": "#D7FBFF",
      "dark": {
        "image": "./assets/images/icons/splash-icon.png",
        "backgroundColor": "#1A6792"
      }
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.wordvision.app",
      "icon": {
        "dark": "./assets/images/icons/ios-dark.png",
        "light": "./assets/images/icons/ios-light.png",
        "tinted": "./assets/images/icons/ios-tinted.png"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icons/android-adaptive-icon.png",
        "monochromeImage": "./assets/images/icons/android-adaptive-icon.png",
        "backgroundColor": "#1A6792"
      },
      "package": "com.wordvision.app"
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-router"
      ],
      [
        "expo-font",
        {
          "fonts": [
            "node_modules/@expo-google-fonts/quando/Quando_400Regular.ttf",
            "node_modules/@expo-google-fonts/atkinson-hyperlegible/AtkinsonHyperlegible_400Regular.ttf",
            "node_modules/@expo-google-fonts/inter/400Regular/Inter_400Regular.ttf",
            "node_modules/@expo-google-fonts/inter/500Medium/Inter_500Medium.ttf",
            "node_modules/@expo-google-fonts/inter/600SemiBold/Inter_600SemiBold.ttf"
          ]
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icons/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#D7FBFF",
          "dark": {
            "image": "./assets/images/icons/splash-icon.png",
            "backgroundColor": "#1A6792"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "4fb9cd11-8bc3-4f75-b998-c20b7a802659"
      }
    }
  }
}
